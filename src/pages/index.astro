---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
      Transform Your Images
    </h1>
    <p class="text-xl text-gray-300 mb-12">
      Professional image processing tools at your fingertips
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <a href="/background-remover" class="group">
        <div class="bg-surface p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105">
          <h2 class="text-xl font-semibold text-primary mb-4">Background Remover</h2>
          <p class="text-gray-400">Remove backgrounds from images with just one click</p>
        </div>
      </a>

      <a href="/color-filter" class="group">
        <div class="bg-surface p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105">
          <h2 class="text-xl font-semibold text-secondary mb-4">Color Filter</h2>
          <p class="text-gray-400">Apply beautiful filters to enhance your images</p>
        </div>
      </a>

      <a href="/image-denoiser" class="group">
        <div class="bg-surface p-6 rounded-lg shadow-lg transition-transform transform hover:scale-105">
          <h2 class="text-xl font-semibold text-accent mb-4">Image Denoiser</h2>
          <p class="text-gray-400">Remove noise and enhance image quality</p>
        </div>
      </a>
    </div>
  </div>
</MainLayout>

